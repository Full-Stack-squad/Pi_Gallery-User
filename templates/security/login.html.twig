{% extends 'template.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <style>
        #intro {
            height: 100vh;
        }
    </style>
{% endblock %}

{% block head %}

    <div id="intro" class="bg-image shadow-2-strong">
        <div class="mask d-flex align-items-center h-100" >
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-md-8">

                        <form method="post" class="bg-white rounded shadow-5-strong p-5" style="color: black">
                            <div class="modal-header" style="color: black;height: 80px;text-align: center;display: block;">
                                <h5 class="modal-title" >S'authentifier</h5>
                            </div>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <!-- Username input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="inputUsername" style="color: black;margin-top: 20px">Email </label>
                                <input type="text" name="username" id="inputUsername" value="{{ last_username }}"
                                       class="form-control" required autofocus/>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="inputPassword" style="color: black" >Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       required/>
                            </div>

                            <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                <div class="col d-flex justify-content-center">
                                    <!-- Checkbox -->
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" name="_remember_me"
                                               id="rememberMeInput"
                                               checked/>
                                        <label class="form-check-label" for="rememberMeInput">
                                            Remember me
                                        </label>
                                    </div>
                                </div>

                                <div class="col text-center">
                                    <!-- Simple link -->
                                    <a href="#!">Forgot password?</a>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
